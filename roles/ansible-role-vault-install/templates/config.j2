ui = {{ vault_ui }}

listener "tcp" {
  address         = "0.0.0.0:{{ vault_port }}"
  cluster_address = "{{ hostvars[inventory_hostname]['ansible_all_ipv4_addresses'] | first }}:{{ vault_cluster_port }}"
  tls_disable     = "{{ tls_disable }}"
  tls_key_file    = "{{ vault_privkey }}"
  tls_cert_file   = "{{ vault_certfile }}"
}

storage "raft" {
  path    = "{{ vault_data_path }}/"
  node_id = "{{ hostvars[inventory_hostname]['ansible_hostname'] }}"
}

api_addr     = "http://{{ hostvars[inventory_hostname]['ansible_all_ipv4_addresses'] | first }}:{{ vault_port }}"
cluster_addr = "https://{{ hostvars[inventory_hostname]['ansible_all_ipv4_addresses'] | first }}:{{ vault_cluster_port }}"
